<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:order_status) %>:</strong></dt>
  <dd><%= @order.order_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_method) %>:</strong></dt>
  <dd><%= @order.payment_method %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping_address) %>:</strong></dt>
  <dd><%= @order.shipping_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping_city) %>:</strong></dt>
  <dd><%= @order.shipping_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @order.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_last_name) %>:</strong></dt>
  <dd><%= @order.customer_last_name %></dd>
</dl>

<%= render @order.line_items %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), orders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_order_path(@order), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), order_path(@order),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-danger' %>
</div>
