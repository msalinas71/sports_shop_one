<p>
	<%= f.label :product, "Product" %>
	<%= f.collection_select :product_id, Product.all, :id, :name %>
	<%= f.label :quantity, "Quantity" %>
	<%= f.number_field :quantity %>

	<%= f.label :price, "Price" %>
	<%= f.number_field :price %>

	<%= f.hidden_field :id %>
